<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tanxin.manage_course.dao.CategoryMapper">


    <resultMap id="categoryMap" type="com.tanxin.framework.domain.course.ext.CategoryNode">
        <id column="aid" property="id"></id>
        <result column="aname" property="name"></result>
        <result column="alabel" property="label"></result>
        <collection property="children" ofType="com.tanxin.framework.domain.course.ext.CategoryNode" >
            <id column="bid" property="id"></id>
            <result column="bname" property="name"></result>
            <result column="blabel" property="label"></result>
        </collection>
    </resultMap>


    <select id="findCategory" resultMap="categoryMap">
        SELECT
	        a.id aid,a.name aname,a.label alabel,b.id bid,b.name bname,b.label blabel
        FROM
            category a
        LEFT JOIN
            category b
        ON
            b.parentid = a.id
        WHERE
            a.parentid = '1'
        ORDER BY a.orderby asc,b.orderby asc

    </select>


</mapper>